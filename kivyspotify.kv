# #:kivy !
<SpotifyWidget>:
    AsyncImage:
        id: album_art
        source: 'res/icons/Spotify_Icon_RGB_Green.png'
        size: self.width, self.height
        size_hint: 0.5, 0.5
        pos_hint: {'center_x': 0.25, 'center_y': 0.5}
    Image:
        id: spotify_logo
        source: 'res/icons/Spotify_Icon_RGB_White.png'
        size: self.width, self.height
        size_hint: 0.15, 0.15
        pos_hint: {'x': 0.85, 'y': 0.85}
    Label:
        id: song_title
        # TODO: Set this up to be able to scroll to view entire title?
        text: root.current_title if len(root.current_title) < 19 else root.current_title[:17] + "..."
        font_size: '22sp'
        text_size: self.size
        size_hint: 0.5, 0.18
        halign: 'center'
        valign: 'center'
        pos_hint: {'center_x': 0.75, 'center_y': 0.65}
    Label:
        id: album 
        # TODO: Set this up to be able to scroll to view entire album?
        text: root.current_album if len(root.current_album) < 28 else root.current_album[:26] + '...'
        font_size: '15sp'
        text_size: self.size
        size_hint: 0.5, 0.065
        halign: 'center'
        valign: 'center'
        pos_hint: {'center_x': 0.75, 'center_y': 0.45}
    Label:
        id: artist
        # TODO: Set this up to be able to scroll to view entire artist?
        text: root.current_artist if len(root.current_artist) < 28 else root.current_artist[:26] + '...'
        font_size: '15sp'
        text_size: self.size
        size_hint: 0.5, 0.065
        halign: 'center'
        valign: 'center'
        pos_hint: {'center_x': 0.75, 'center_y': 0.35}
    MDIconButton:
        icon: 'pause' if root.playing else 'play'
        icon_size: "64sp"
        pos_hint: {'center_x': 0.75, 'center_y': 0.2}
        on_release: root.Toggle_Playback()
    ProgressBar:
        id: playback_progress
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        size_hint_x: 0.95
        max: root.track_duration
        value: root.curr_playback_time