<SpotifyWidget>:
    AsyncImage:
        id: album_art
        source: 'res/Spotify_Icon_RGB_Green.png'
        size: self.width, self.height
        size_hint: 0.3, 0.3
        pos_hint: {'center_x': 0.2, 'center_y': 0.6}
    Image:
        id: spotify_logo
        source: 'res/Spotify_Icon_RGB_White.png'
        size: self.width, self.height
        size_hint: 0.15, 0.15
        pos_hint: {'x': 0.85, 'y': 0.85}
    Label:
        id: song_title
        text: "No title found"
        font_size: '25sp'
        pos_hint: {'center_x': 0.7, 'center_y': 0.7}
    Label:
        id: album 
        text: "No album found"
        font_size: '15sp'
        pos_hint: {'center_x': 0.7, 'center_y': 0.6}
    Label:
        id: artist
        text: "No artist found"
        font_size: '15sp'
        pos_hint: {'center_x': 0.7, 'center_y': 0.5}
